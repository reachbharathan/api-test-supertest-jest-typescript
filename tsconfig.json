{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "rootDirs": [
      "src"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/**/*.json",
    "@types/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "coverage"
  ]
}
